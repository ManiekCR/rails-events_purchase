<div class="p-5">
  <h1 class="text-center pb-5">List of Best Festivals</h1>
  <div class="event-list">
    <li>
      <% @events.each do |event| %>
        <%= link_to event_path(event) do %>
          <ul class="card-event">
            <div class="card-event-infos">
              <h2><%= event.name %></h2>
              <p><em><%= event.city %>, <%= event.country %></em></p>
              <p><%= event.date %></p>
            </div>
          </ul>
        <% end %>
      <% end %>
    </li>
  </div>
</div>

